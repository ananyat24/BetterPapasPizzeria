while gameloop:

    for event in pygame.event.get():
        pass
    
    
    
    pygame.display.update()

pygame.quit()

def polar_to_cartesian(r, theta):
        x = int(r * math.cos(math.pi * theta / 180))
        y = int(r * math.sin(math.pi * theta / 180))
        adjusted_x = int(1000/2) - 200 + 65 + x
        adjusted_y = int(550 + 55 - y)
        print("x" + str(adjusted_x))
        print("y" + str(adjusted_y))
        return (adjusted_x, adjusted_y)
    
def start_timer():
    #current_time = datetime.datetime.now()
        
    clock_stopped = False
     
    oven_clock_button = pygame.Rect((200, 50, 940, 0))
       
    while not clock_stopped:
        order_options.orderOptions.miniTimer()
        """
